#include <stdio.h>
int main() {
    int i, j, arr1[50][50], sum = 0, n;
    printf("Input the size of the square matrix : ");
    scanf("%d", &n);
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            printf("element - [%d],[%d] : ", i, j);
            scanf("%d", &arr1[i][j]);
            if (i == j) {
                sum = sum + arr1[i][j];
            }
        }
    }
    printf("Addition of the  Diagonal elements is : %d\n", sum);

    return 0;
}
